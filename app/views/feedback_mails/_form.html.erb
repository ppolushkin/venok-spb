<div class="maincontent">

  <script src="/javascripts/jquery/jquery-1.6.1.min.js" type="text/javascript"></script>
  <script src="/javascripts/jquery/obelisk.js" type="text/javascript"></script>

  <script type='text/javascript'>
      jQuery.noConflict();
      hover_button("#back-link", "/images/back.png", "/images/go-back.png")
  </script>

  <h3>Отправить сообщение</h3>

  <%= form_for(@feedback_mail) do |f| %>
      <% if @feedback_mail.errors.any? %>
          <div id="error_explanation">
            <h2>Сообщение не может быть отправлено:</h2>
            <ul>
              <% @feedback_mail.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div class="field">
        <%= label_tag "Ваш почтовый ящик *" %>
        <br/>
        <%= f.text_field :email %>
      </div>
      <div class="field">
        <%= label_tag "Ваше имя *" %>
        <br/>
        <%= f.text_field :name %>
      </div>
      <div class="field">
        <%= label_tag "Телефон" %>
        <br/>
        <%= f.text_field :phone %>
      </div>
      <div class="field">
        <%= label_tag "Сообщение" %>
        <br/>
        <%= f.text_area :message, :rows=>20, :cols=>113 %>
      </div>
      <div class="actions">
        <%= f.submit 'Отправить' %>
      </div>
  <% end %>

  <a id="back-link" href="javascript: history.go(-1)"><img src="/images/back.png" alt="Назад"/> Назад</a>

</div>
