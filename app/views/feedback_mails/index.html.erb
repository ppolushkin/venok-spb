<script src="/javascripts/admin.js"></script>

<div class="big-table">

  <div class="right-button">
    <form class="button_to" action="/feedback_mails/new" method="get">
      <input type="submit" value="Добавить">
    </form>
  </div>

  <table>
    <tr>
      <th>Почтовый адрес</th>
      <th>Имя</th>
      <th>Телефон</th>
      <th colspan="2">Управление</th>
    </tr>

    <% @feedback_mails.each do |feedback_mail| %>
        <tr>
          <td><%= feedback_mail.email %></td>
          <td><%= feedback_mail.name %></td>
          <td><%= feedback_mail.phone %></td>
          <td><%= link_to 'Показать', feedback_mail %></td>
          <td><%= link_to 'Удалить', feedback_mail, :confirm => 'Are you sure?', :method => :delete %></td>
        </tr>
    <% end %>
  </table>


</div>
