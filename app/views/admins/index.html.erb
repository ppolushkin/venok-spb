<script type="text/javascript" src="/javascripts/admin.js"></script>

<div class="admin-area">

  <div class="right-button">
    <form class="button_to" action="/admins/new" method="get">
      <input type="submit" value="Добавить">
    </form>
  </div>

<table>
  <tr>
    <th>Email</th>
    <th>Получать уведомления о заказах</th>
    <th colspan="2">Управление</th>
  </tr>

<% @admins.each do |admin| %>
  <tr>
    <td><%= admin.email %></td>
    <td><%= admin.receive_emails %></td>
    <td><%= link_to 'Редактировать', edit_admin_path(admin) %></td>
    <td><%= link_to 'Удалить', admin, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

</div>
