<link rel="stylesheet" href="/stylesheets/colorbox.css" />

<script src="/javascripts/jquery.colorbox-min.js"></script>

<script src="/javascripts/jquery.lazyload.min.js" type="text/javascript"></script>

<script src="/javascripts/store.js"></script>

<div class="product-grid">

<% @products.each do |product| %>
    <div class="product-item">

      <div class="id <%= product.id %>"></div>

      <a class="thumb" href="<%= product.medium_img.url %>">
        <img src="/images/grey.gif" data-original="<%= product.small_img.url %>" alt="Траурный венок <%= product.name %>" width="135" height="180">
      </a>

      <div class="details">
        <a class="buyButton<%= product.id %>" onclick="processBuyClick(<%= product.id %>, <%=raw product.link %>)">Купить</a>
        <div class="absentText<%= product.id %> absent-text">Нет на складе</div>
      </div>

      <div class="price"><span><%= product.formatted_retail_price %></span></div>

      <div class="description"><%= product.name %></div>

      <div class="size"><%= product_size product %></div>

    </div>
<% end %>

</div>

<br class="clear" />

