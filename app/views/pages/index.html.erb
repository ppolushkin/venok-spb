<script src="/javascripts/admin.js"></script>

<div class="big-table">

  <div class="right-button">
    <form class="button_to" action="/pages/new" method="get">
      <input type="submit" value="Добавить">
    </form>
  </div>

  <table id="pages-editor-table">
    <tr>
      <th>Адрес</th>
      <th>Имя страницы</th>
      <th>Номер ревизии</th>
      <th colspan="3">Управление</th>
    </tr>

    <% @pages.each do |page| %>
        <tr>
          <td><%= page.reference %></td>
          <td><%= page.title %></td>
          <td><%= page.revisions.count %></td>
          <td class="manage"><a href="<%= page.reference %>">Показать</a></td>
          <td class="manage"><%= link_to 'Редактировать', edit_page_path(page) %></td>
          <td class="manage"><%= link_to 'Удалить', page, :confirm => 'Вы уверены?', :method => :delete %></td>
        </tr>
    <% end %>
  </table>
</div>

