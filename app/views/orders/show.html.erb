<div class="text-block" xmlns="http://www.w3.org/1999/html">

  <p>

    <% basket = @order.basket %>
    <% if basket && basket.basket_items.size > 0 %>
      <table>
        <tr>
          <th>Артикль</th>
          <th>Наименование</th>
          <th>Количество</th>
          <th>На складе</th>
          <th>Цена за штуку</th>
          <th>Стоимость</th>
        </tr>
        <% basket.basket_items.each() do |item| %>
            <tr>
              <td><%= item.product.article %></td>
              <td><%= item.product.name %></td>
              <td><%= item.count %></td>
              <td><%= DEPOT.availiable item.product.id %></td>
              <td><%= item.product.formatted_retail_price %></td>
              <td><%= sprintf("%u р", item.count * item.product.retail_price) %></td>
            </tr>
        <% end %>
      </table>
  <% end %>

  <% if basket && basket.tapes.size > 0 %>
      <h2>Ленты:</h2>
      <table class="tapeTable">
        <tr>
          <th>Текст</th>
          <th>Цвет</th>
          <th>Для</th>
          <th>Количество</th>
          <th>Стоимость</th>
        </tr>
        <% basket.tapes.each() do |tape| %>
            <tr class="<%= tape.product_id.to_s %>">
              <td><%= tape.text %></td>
              <td><%= tape.color %></td>
              <td><%= tape.product_article %></td>
              <td><%= tape.count %></td>
              <td><%= sprintf("%u р", tape.count * 300) %></td>
            </tr>
        <% end %>
      </table>
  <% end %>

  </p>

  <p>
    <b>Имя:</b>
    <%= @order.full_name %>
  </p>

  <p>
    <b>Телефон:</b>
    <%= @order.phone %>
  </p>

  <p>
    <b>Email:</b>
    <%= @order.email %>
  </p>

  <p>
    <b>Доставка:</b>
    <%= @order.delivery %>
  </p>

  <p>
    <b>Адрес доставки:</b>
    <%= @order.address %>
  </p>

  <p>
    <b>Дополнительно:</b>
    <%= @order.notes %>
  </p>

  <p>
    <b>Полная сумма заказа:</b>
    <%= @order.formatted_full_order_price %>
  </p>


  <% if @order.new? %>
      <%= form_for @order, :url => {:action => "verify"} do |f| %>
          <input type="submit" value="Подтвердить заказ">
      <% end %>
  <% end %>
</div>

